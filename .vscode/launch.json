{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug VulkanTest",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/VulkanTest",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        { "name": "DISPLAY", "value": "localhost:10.0" }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
